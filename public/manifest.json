{
  "manifest_version": 3,
  "name": "Tinder Copilot",
  "version": "0.9.9",
  "description": "Podpowiada i ocenia twoje wiadomo≈õci na Tinderze jak ruchy w szachach, z wykorzystaniem GEMINI",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "identity"],
  "host_permissions": ["https://tinder.com/*", "https://api.gotinder.com/*"],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["/assessments/*", "injectHook.js"],
      "matches": ["*://tinder.com/*"],
      "use_dynamic_url": true
    }
  ],

  "content_scripts": [
    {
      "matches": ["https://tinder.com/*", "https://*.tinder.com/*"],
      "js": ["content.js"],
      "type": "module",
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
